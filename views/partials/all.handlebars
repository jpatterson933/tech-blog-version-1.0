{{#if post}}

    {{#each post as | post | }}
    <div class="card all-cards">
        <div class="card-header">
            -0-
        </div>
        <div>
            <div class="form-group">
                <text type="text" class="form-control" id="blog-title" placeholder="Tech Title"> {{post.title}}
            </div>
            <div class="form-group">
                <text type="text" class="form-control" id="blog-content" rows="3"
                    placeholder="Your take on tech...">{{post.content}}</text>
            </div>
            <a href="/dash/view/{{post.id}}" class="link-dark">View Post</a>
        </div>
        <div class="card-footer">
            Eact Moment of Post: {{post.createdAt}}
        </div>

    </div>

    {{/each}}
{{else}}
<h1>No posts have been created yet!</h1>
{{/if}}