
{{#each myPost as | post | }}
  {{post.content}}
    <div class="card-header">
        -0-
    </div>
    <div>
          <div class="form-group">
              <text type="text" class="form-control" id="blog-title" placeholder="Tech Title"> {{post.title}}
          </div>
          <div class="form-group">
              <text type="text" class="form-control" id="blog-content" rows="3" placeholder="Your take on tech...">{{post.content}}</text>
          </div>
          <button class="btn btn-primary" type="submit">Comment</button>
    </div>
    <div class="card-footer text-muted">
      {{post.created_at}}
    </div>

  
  
{{/each}}

